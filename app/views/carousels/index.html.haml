- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid.p-0
    .row
      .col-md-12
        %table.text-center.table-bordered.table-sm{:'data-toggle' => "table", :"data-pagination"=>"true", :"data-search" => "true",:'data-advanced-search'=>"true", :'data-id-table'=>"advancedTable"}
          %thead.thead-light
            %tr
              %th{:scope => "col"} #
            
              %th{:scope => "col"}
                = Setting.carousels.name
              %th{:scope => "col"}
          %tbody
            - @carousels.each_with_index do |carousel, index|
              %tr
                %td{:scope => "row"}
                  = index+1
              
                %td
                  = carousel.name
                %td
                  .container-fluid
                    .row
                      = link_to carousel_path(carousel), :class => "text-info col" do
                        = fa_icon "search"
                      = link_to edit_carousel_path(carousel), :class => "text-success col" do
                        = fa_icon "edit"
                      = link_to carousel, :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "text-danger col" do
                        = fa_icon "trash"

= render "layouts/control_panel"
