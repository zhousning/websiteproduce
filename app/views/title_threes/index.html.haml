- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid.p-0
    .row
      .col-md-12
        %table.text-center.table-bordered.table-sm{:'data-toggle' => "table", :"data-pagination"=>"true", :"data-search" => "true",:'data-advanced-search'=>"true", :'data-id-table'=>"advancedTable"}
          %thead.thead-light
            %tr
              %th{:scope => "col"} #
            
              %th{:scope => "col"}
                = Setting.title_threes.tag
              %th{:scope => "col"}
                = Setting.title_threes.align
              %th{:scope => "col"}
                = Setting.title_threes.color
              %th{:scope => "col"}
                = Setting.title_threes.font
              %th{:scope => "col"}
                = Setting.title_threes.background
              %th{:scope => "col"}
                = Setting.title_threes.weight
              %th{:scope => "col"}
                = Setting.title_threes.line_height
              %th{:scope => "col"}
                = Setting.title_threes.letter_spacing
              %th{:scope => "col"}
          %tbody
            - @title_threes.each_with_index do |title_three, index|
              %tr
                %td{:scope => "row"}
                  = index+1
              
                %td
                  = title_three.tag
                %td
                  = title_three.align
                %td
                  = title_three.color
                %td
                  = title_three.font
                %td
                  = title_three.background
                %td
                  = title_three.weight
                %td
                  = title_three.line_height
                %td
                  = title_three.letter_spacing
                %td
                  .container-fluid
                    .row
                      = link_to title_three_path(title_three), :class => "text-info col" do
                        = fa_icon "search"
                      = link_to edit_title_three_path(title_three), :class => "text-success col" do
                        = fa_icon "edit"
                      = link_to title_three, :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "text-danger col" do
                        = fa_icon "trash"

= render "layouts/control_panel"
