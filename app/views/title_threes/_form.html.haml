.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @title_three do |f|
        - if @title_three.errors.any?
          #error_explanation
            %h2= "#{pluralize(@title_three.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @title_three.errors.full_messages.each do |msg|
                %li= msg
      
        .form-group.row
          = f.label Setting.title_threes.tag, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.select :tag, options_for_title_tag, {:include_blank=>false}, {:class=>"form-control"}
        .form-group.row
          = f.label Setting.title_threes.align, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.select :align, options_for_align, {:include_blank=>false}, {:class=>"form-control"}
        .form-group.row
          = f.label Setting.title_threes.color, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.select :color, options_for_color, {:include_blank=>false}, {:class=>"form-control"}
        .form-group.row
          = f.label Setting.title_threes.font, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.select :font, options_for_font, {:include_blank=>false}, {:class=>"form-control"}
        .form-group.row
          = f.label Setting.title_threes.background, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.select :background, options_for_background, {:include_blank=>false}, {:class=>"form-control"}
        .form-group.row
          = f.label Setting.title_threes.weight, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.select :weight, options_for_weight, {:include_blank=>false}, {:class=>"form-control"}
        .form-group.row
          = f.label Setting.title_threes.line_height, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.select :line_height, options_for_line_height, {:include_blank=>false}, {:class=>"form-control"}
        .form-group.row
          = f.label Setting.title_threes.letter_spacing, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.text_field :letter_spacing, :class => "form-control"
          
      
      
        .form-group.row
          .col-sm-3.offset-sm-2
            = f.submit '保存', :class => "btn btn-success"
          .col-sm-3.offset-sm-1
            = link_to '返回', title_threes_path, :class => "btn btn-danger"
