- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid.p-0
    .row
      .col-md-12
        %table.text-center.table-bordered.table-sm{:'data-toggle' => "table", :"data-pagination"=>"true", :"data-search" => "true",:'data-advanced-search'=>"true", :'data-id-table'=>"advancedTable"}
          %thead.thead-light
            %tr
              %th{:scope => "col"} #
            
              %th{:scope => "col"}
                = Setting.image_libraries.category
              %th{:scope => "col"}
                = Setting.image_libraries.style
              %th{:scope => "col"}
                = Setting.image_libraries.file_name
              %th{:scope => "col"}
                = Setting.image_libraries.width
              %th{:scope => "col"}
                = Setting.image_libraries.height
              %th{:scope => "col"}
                = Setting.image_libraries.tag
              %th{:scope => "col"}
          %tbody
            - @image_libraries.each_with_index do |image_library, index|
              %tr
                %td{:scope => "row"}
                  = index+1
              
                %td
                  = image_library.category
                %td
                  = image_library.style
                %td
                  = image_library.file_name
                %td
                  = image_library.width
                %td
                  = image_library.height
                %td
                  = image_library.tag
                %td
                  .container-fluid
                    .row
                      = link_to image_library_path(image_library), :class => "text-info col" do
                        = fa_icon "search"
                      = link_to edit_image_library_path(image_library), :class => "text-success col" do
                        = fa_icon "edit"
                      = link_to image_library, :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "text-danger col" do
                        = fa_icon "trash"

= render "layouts/control_panel"
