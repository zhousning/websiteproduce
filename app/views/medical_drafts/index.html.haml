- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid.p-0
    .row
      .col-md-12
        %table.text-center.table-bordered.table-sm{:'data-toggle' => "table", :"data-pagination"=>"true", :"data-search" => "true",:'data-advanced-search'=>"true", :'data-id-table'=>"advancedTable"}
          %thead.thead-light
            %tr
              %th{:scope => "col"} #
            
              %th{:scope => "col"}
                = Setting.medical_drafts.name
              %th{:scope => "col"}
          %tbody
            - @medical_drafts.each_with_index do |medical_draft, index|
              %tr
                %td{:scope => "row"}
                  = index+1
              
                %td
                  = medical_draft.name
                %td
                  .container-fluid
                    .row
                      = link_to medical_draft_path(medical_draft), :class => "text-info col" do
                        = fa_icon "search"
                      = link_to edit_medical_draft_path(medical_draft), :class => "text-success col" do
                        = fa_icon "edit"
                      = link_to organize_medical_draft_path(medical_draft), :class => "text-success col" do
                        生成试卷
                      = link_to medical_draft, :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "text-danger col" do
                        = fa_icon "trash"

= render "layouts/control_panel"
