                = f.label Setting.systems.status_no, :class => "form-check-label"
            
          
      
      
        .form-group.row
          = f.label "属性", :class => "col-sm-1 control-label"
          .col-sm-11
            = f.fields_for :natures do |nature|
              = render 'nature_fields', f: nature 
            .links
              = link_to_add_association "添加", f, :natures, :class => "btn btn-success"
      
        .form-group.row
          = f.label "关联", :class => "col-sm-1 control-label"
          .col-sm-11
            = f.fields_for :relates do |relate|
              = render 'relate_fields', f: relate 
            .links
              = link_to_add_association "添加", f, :relates, :class => "btn btn-success"
      
        .form-group.row
          .col-sm-3.offset-sm-2
            = f.submit '保存', :class => "btn btn-success"
