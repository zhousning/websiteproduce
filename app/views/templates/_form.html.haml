.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @template do |f|
        - if @template.errors.any?
          #error_explanation
            %h2= "#{pluralize(@template.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @template.errors.full_messages.each do |msg|
                %li= msg
      
        .form-row
          .form-group.col.row
            = f.label Setting.templates.name, :class => "col-sm-3 text-right"
            .col-sm-9
              = f.text_field :name, :class => "form-control"

          .form-group.col.row
            = f.label Setting.templates.cn_name, :class => "col-sm-3 text-right"
            .col-sm-9
              = f.text_field :cn_name, :class => "form-control"
          
          .form-group.col.row
            = f.label Setting.templates.nest, :class => "col-sm-3 text-right"
            .col-sm-9
              = f.text_field :nest, :class => "form-control", :placeholder => "以空格隔开"
          
        .form-row
          .form-group.col.row
            = f.label Setting.templates.index, :class => "col-sm-3 text-right"
            .col-sm-9
              .form-check.form-check-inline
                = f.radio_button :index, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
                = f.label Setting.systems.status_yes, :class => "form-check-label"
              .form-check.form-check-inline
                = f.radio_button :index, Setting.systems.status_en_no, :class => "form-check-input"
                = f.label Setting.systems.status_no, :class => "form-check-label"
            
          .form-group.col.row
            = f.label Setting.templates.new, :class => "col-sm-3 text-right"
            .col-sm-9
              .form-check.form-check-inline
                = f.radio_button :new, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
                = f.label Setting.systems.status_yes, :class => "form-check-label"
              .form-check.form-check-inline
                = f.radio_button :new, Setting.systems.status_en_no, :class => "form-check-input"
                = f.label Setting.systems.status_no, :class => "form-check-label"
            
          .form-group.col.row
            = f.label Setting.templates.edit, :class => "col-sm-3 text-right"
            .col-sm-9
              .form-check.form-check-inline
                = f.radio_button :edit, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
                = f.label Setting.systems.status_yes, :class => "form-check-label"
              .form-check.form-check-inline
                = f.radio_button :edit, Setting.systems.status_en_no, :class => "form-check-input"
                = f.label Setting.systems.status_no, :class => "form-check-label"
            
          .form-group.col.row
            = f.label Setting.templates.show, :class => "col-sm-3 text-right"
            .col-sm-9
              .form-check.form-check-inline
                = f.radio_button :show, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
                = f.label Setting.systems.status_yes, :class => "form-check-label"
              .form-check.form-check-inline
                = f.radio_button :show, Setting.systems.status_en_no, :class => "form-check-input"
                = f.label Setting.systems.status_no, :class => "form-check-label"
            
          .form-group.col.row
            = f.label Setting.templates.form, :class => "col-sm-3 text-right"
            .col-sm-9
              .form-check.form-check-inline
                = f.radio_button :form, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
                = f.label Setting.systems.status_yes, :class => "form-check-label"
              .form-check.form-check-inline
                = f.radio_button :form, Setting.systems.status_en_no, :class => "form-check-input"
                = f.label Setting.systems.status_no, :class => "form-check-label"
            
        .form-row
          .form-group.col.row
            = f.label Setting.templates.image, :class => "col-sm-3 text-right"
            .col-sm-9
              .form-check.form-check-inline
                = f.radio_button :image, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
                = f.label Setting.systems.status_yes, :class => "form-check-label"
              .form-check.form-check-inline
                = f.radio_button :image, Setting.systems.status_en_no, :class => "form-check-input"
                = f.label Setting.systems.status_no, :class => "form-check-label"

          .form-group.col.row
            = f.label Setting.templates.admin, :class => "col-sm-4 text-right"
            .col-sm-8
              .form-check.form-check-inline
                = f.radio_button :admin, Setting.systems.status_en_yes, :class => "form-check-input", :checked => "checked"
