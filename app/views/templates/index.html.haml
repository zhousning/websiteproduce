- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid.p-0
    .row
      .col-md-12
        %table.text-center.table-bordered.table-sm{:'data-toggle' => "table", :"data-pagination"=>"true", :"data-search" => "true",:'data-advanced-search'=>"true", :'data-id-table'=>"advancedTable"}
          %thead.thead-light
            %tr
              %th{:scope => "col"} #
            
              %th{:scope => "col"}
                = Setting.templates.name
              %th{:scope => "col"}
                = Setting.templates.nest
              %th{:scope => "col"}
                = Setting.templates.image
              %th{:scope => "col"}
                = Setting.templates.index
              %th{:scope => "col"}
                = Setting.templates.new
              %th{:scope => "col"}
                = Setting.templates.edit
              %th{:scope => "col"}
                = Setting.templates.show
              %th{:scope => "col"}
                = Setting.templates.form
              %th{:scope => "col"}
                = Setting.templates.js
              %th{:scope => "col"}
                = Setting.templates.scss
              %th{:scope => "col"}
                = Setting.templates.admin
              %th{:scope => "col"}
          %tbody
            - @templates.each_with_index do |template, index|
              %tr
                %td{:scope => "row"}
                  = index+1
                %td
                  = template.name
                %td
                  = template.nest
                %td
                  = template.image
                %td
                  = template.index
                %td
                  = template.new
                %td
                  = template.edit
                %td
                  = template.show
                %td
                  = template.form
                %td
                  = template.js
                %td
                  = template.scss
                %td
                  = template.admin
                %td
                  .container-fluid
                    .row
                      = link_to template_path(template), :class => "text-info col" do
                        = fa_icon "search"
                      = link_to edit_template_path(template), :class => "text-success col" do
                        = fa_icon "edit"
                      = link_to template, :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "text-danger col" do
                        = fa_icon "trash"
                      = link_to produce_template_path(template), :class => "text-primary col" do
                        = fa_icon "wrench"

= render "layouts/control_panel"
