.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @format do |f|
        - if @format.errors.any?
          #error_explanation
            %h2= "#{pluralize(@format.errors.count, "error")} prohibited this buyer from being saved:"
            %ul
              - @format.errors.full_messages.each do |msg|
                %li= msg
      
        .form-group.row
          = f.label Setting.formats.name, :class => "col-sm-3 text-right"
          .col-sm-9
            = f.text_field :name, :class => "form-control"
          
      
        .form-group.row
          = f.label "主图", :class => "col-sm-1 control-label"
          .col-sm-11
            = f.fields_for :enclosures do |enclosure|
              = render 'enclosure_fields', f: enclosure
            .links
              = link_to_add_association "添加文件", f, :enclosures, :class => "btn btn-success"
      
      
        .form-group.row
          .col-sm-3.offset-sm-2
            = f.submit '保存', :class => "btn btn-success"
          .col-sm-3.offset-sm-1
            = link_to '返回', formats_path, :class => "btn btn-danger"
