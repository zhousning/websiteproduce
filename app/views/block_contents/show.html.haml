- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid
    .row
      .col-md-12
        %table.table.text-center.table-bordered
          %thead
            %tr
            
              %th 
                = Setting.block_contents.description
          %tbody
            %tr
            
              %td
                = @block_content.description
    
      .col-md-12
        - @block_content.enclosures.each do |e|
          = image_tag e.file_url(:small_width)
    

= render "layouts/control_panel"
